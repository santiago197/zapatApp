<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sneakerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:context=".SneakerDetailActivity">

    <ImageView
        android:id="@+id/sneakerDetailedImage"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:src="@drawable/adidas" />


    <TextView
        android:id="@+id/sneakerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:padding="15dp"
        android:text="Tenis Adidas para Hombre Running Response Runner U"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sneakerPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="$250.000" />

    <TextView
        android:id="@+id/sneakerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:padding="15dp"
        android:text="Recuerda que tienes 30 dÃ­as para efectuar el cambio de tu calzado, los cuales deben estar en buen estado y con su caja original   "
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center|fill"
        android:text="@string/btn_comprar"
        app:icon="@drawable/ic_add_shopping_cart" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center|fill"
        android:text="@string/btn_volver"
        app:icon="?attr/actionModeCloseDrawable" />

</LinearLayout>